property nuklei ${nuklei:directory("target/nukleus-itests").streamsCapacity(1024 * 1024, 64 * 1024)}

property targetInput ${nuklei.streams("target", "tcp#any")}
property targetOutputEst ${nuklei.streams("tcp", "target")}

property newTargetOutputEstId1 ${nuklei:newStreamId()}
property newTargetOutputEstId2 ${nuklei:newStreamId()}

# Override to test for reset
property secondStreamReplyFrameType [0x40 0x00 0x00 0x02]

connect await ROUTED_INPUT
        agrona://stream/bidirectional
        option reader ${agrona:oneToOneReader(targetInput.buffer)}
        option writer ${agrona:oneToOneWriter(targetInput.throttle)}
connected

read [0x00 0x00 0x00 0x01]
read ([0..8]:targetInputId1)
read ([0..8]:targetInputRef)
read ([0..8]:correlationId1)
read [0x10]
read ([0..8]:localAddress)
read ([0..8]:remoteAddress1)

write [0x40 0x00 0x00 0x02]
write ${targetInputId1}
write [0x00 0x02 0x00 0x00]
write flush

write notify WINDOW_ONE_UPDATED

read [0x00 0x00 0x00 0x01]
read ([0..8]:targetInputId2)
read ([0..8]:targetInputRef)
read ([0..8]:correlationId2)
read [0x10]
read ([0..8]:localAddress)
read ([0..8]:remoteAddress2)

write [0x40 0x00 0x00 0x02]
write ${targetInputId2}
write [0x00 0x02 0x00 0x00]
write flush

write notify WINDOW_TWO_UPDATED

connect await ROUTED_INPUT
        agrona://stream/bidirectional
        option reader ${agrona:oneToOneReader(targetOutputEst.throttle)}
        option writer ${agrona:oneToOneWriter(targetOutputEst.buffer)}
connected

# Stream 1

write await WINDOW_ONE_UPDATED

write [0x00 0x00 0x00 0x01]
write ${newTargetOutputEstId1}
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write ${correlationId1}
write [0x00]
write flush

read [0x40 0x00 0x00 0x02]
read ${newTargetOutputEstId1}
read [0..4]

write [0x00 0x00 0x00 0x02]
write ${newTargetOutputEstId1}
write [0x0d] "server data 1"
write [0x00]
write flush

read [0x40 0x00 0x00 0x02]
read ${newTargetOutputEstId1}
read [0..4] # TODO: read int 13 option byteorder native

# Stream 2

write await WINDOW_TWO_UPDATED

write [0x00 0x00 0x00 0x01]
write ${newTargetOutputEstId2}
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write ${correlationId2}
write [0x00]
write flush

read [0x40 0x00 0x00 0x02]
read ${newTargetOutputEstId2}
read [0..4]

write [0x00 0x00 0x00 0x02]
write ${newTargetOutputEstId2}
write [0x0d] "server data 2"
write [0x00]
write flush

read ${secondStreamReplyFrameType}
read ${newTargetOutputEstId2}
