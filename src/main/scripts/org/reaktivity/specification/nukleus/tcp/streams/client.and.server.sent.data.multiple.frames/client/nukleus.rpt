property nuklei ${nuklei:directory("target/nukleus-itests").streamsCapacity(1024 * 1024, 64 * 1024)}

property sourceOutput ${nuklei.streams("tcp", "source#partition")}
property sourceInputEst ${nuklei.streams("source", "tcp#any")}

property newSourceInputEstId ${nuklei:newStreamId()}

connect await ROUTED_OUTPUT
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:oneToOneReader(sourceOutput.buffer)}
        option agrona:writer ${agrona:oneToOneWriter(sourceOutput.throttle)}
connected

read [0x00 0x00 0x00 0x01]
read ([0..8]:sourceOutputId)
read ([0..8]:sourceOutputRef)
read ([0..8]:correlationId)

write [0x40 0x00 0x00 0x02]
write ${sourceOutputId}
write [0x00 0x02 0x00 0x00]
write flush

write notify WINDOW_UPDATED

read [0x00 0x00 0x00 0x02]
read ${sourceOutputId}
read [0x00 0x0d]
read "client data 1"
read notify DATA_RECEIVED_1

write [0x40 0x00 0x00 0x02]
write ${sourceOutputId}
write [0x0d 0x00 0x00 0x00] # TODO: native int
write flush

read [0x00 0x00 0x00 0x02]
read ${sourceOutputId}
read [0x00 0x0d]
read "client data 2"
read notify DATA_RECEIVED_2

write [0x40 0x00 0x00 0x02]
write ${sourceOutputId}
write [0x0d 0x00 0x00 0x00] # TODO: native int
write flush

close
closed

connect await ROUTED_INPUT
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:oneToOneReader(sourceInputEst.throttle)}
        option agrona:writer ${agrona:oneToOneWriter(sourceInputEst.buffer)}
connected

write await WINDOW_UPDATED

write [0x00 0x00 0x00 0x01]
write ${newSourceInputEstId}
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write ${correlationId}
write [0x01] [0x7f 0x00 0x00 0x01]
write [0x1f 0x90]
write [0x01] [0x7f 0x00 0x00 0x01]
write [0x9f 0x90]
write flush

read [0x40 0x00 0x00 0x02]
read ${newSourceInputEstId}
read [0..4]

write await DATA_RECEIVED_1
write [0x00 0x00 0x00 0x02]
write ${newSourceInputEstId}
write [0x00 0x0d]
write "server data 1"
write flush

write await DATA_RECEIVED_2
write [0x00 0x00 0x00 0x02]
write ${newSourceInputEstId}
write [0x00 0x0d]
write "server data 2"
write flush

read [0x40 0x00 0x00 0x02]
read ${newSourceInputEstId}
read [0..4] # TODO: read int 13 option byteorder native

read [0x40 0x00 0x00 0x02]
read ${newSourceInputEstId}
read [0..4] # TODO: read int 13 option byteorder native

close
closed
