property nuklei ${nuklei:directory("target/nukleus-itests").streamsCapacity(1024 * 1024, 64 * 1024)}

property clientAccept ${nuklei.streams("tcp", "source#partition")}
property clientAcceptReply ${nuklei.streams("source", "tcp#any")}

property newClientAcceptReplyId ${nuklei:newStreamId()}

connect await ROUTED_CLIENT
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:oneToOneReader(clientAccept.buffer)}
        option agrona:writer ${agrona:oneToOneWriter(clientAccept.throttle)}
connected

read [0x00 0x00 0x00 0x01]
read ([0..8]:clientAcceptId)
read [0x06] "source"
read ([0..8]:clientAcceptRef)
read ([0..8]:correlationId)

write [0x40 0x00 0x00 0x02]
write ${clientAcceptId}
write [0x0F 0x00 0x00 0x00] # TODO: native byte order
write [0x0F 0x00 0x00 0x00]
write flush

write notify CONNECTED_CLIENT

read [0x00 0x00 0x00 0x02]
read ${clientAcceptId}
read [0x00 0x0d]
read "client data 1"

write [0x40 0x00 0x00 0x02]
write ${clientAcceptId}
write [0x05 0x00 0x00 0x00]  # TODO: native byte order
write [0x01 0x00 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x02]
read ${clientAcceptId}
read [0x00 0x07]
read "client "

write [0x40 0x00 0x00 0x02]
write ${clientAcceptId}
write [0x0F 0x00 0x00 0x00] # TODO: native byte order
write [0x01 0x00 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x02]
read ${clientAcceptId}
read [0x00 0x06]
read "data 2"

connect await CONNECTED_CLIENT
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:oneToOneReader(clientAcceptReply.throttle)}
        option agrona:writer ${agrona:oneToOneWriter(clientAcceptReply.buffer)}
connected

write [0x00 0x00 0x00 0x01]
write ${newClientAcceptReplyId}
write [0x03] "tcp"
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write ${correlationId}
write [0x01] [0x7f 0x00 0x00 0x01]
write [0x1f 0x90]
write [0x01] [0x7f 0x00 0x00 0x01]
write [0x9f 0x90]
write flush

close
closed
