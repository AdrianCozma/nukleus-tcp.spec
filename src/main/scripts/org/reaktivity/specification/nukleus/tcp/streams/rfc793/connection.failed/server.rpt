property newClientAcceptRef ${nuklei:newReferenceId()} 
property newServerConnectRef ${newClientAcceptRef} # external scope

property serverConnect "nukleus://target/streams/tcp#source"
property serverInitialWindow 8192
       
accept ${serverConnect}
       option nukleus:route ${newServerConnectRef}
       option nukleus:window ${serverInitialWindow}
       option nukleus:transmission "simplex"
accepted

# TODO: cause a RESET frame to be sent instead of WINDOW when k3po nukleus transport adds 
# support for this ("read abort" or "connect abort" without the presence on the connected keyword). 
# For now where we can do is WINDOW (connected) plus RESET
connected
read abort



