property newServerConnectRef ${nuklei:newReferenceId()} # external scope

property nuklei ${nuklei:directory("target/nukleus-itests").streamsCapacity(1024 * 1024, 64 * 1024)}

property serverConnect ${nuklei.streams("target", "tcp#any")}
property serverConnectReply ${nuklei.streams("tcp", "target#partition")}

property newServerConnectId1 ${nuklei:newStreamId()}
property newServerConnectId2 ${nuklei:newStreamId()}
property newCorrelationId1 ${nuklei:newCorrelationId()}
property newCorrelationId2 ${nuklei:newCorrelationId()}

connect await ROUTED_SERVER
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:oneToOneReader(serverConnect.throttle)}
        option agrona:writer ${agrona:oneToOneWriter(serverConnect.buffer)}
connected

# Stream 1 BEGIN
write [0x00 0x00 0x00 0x01]
write ${newServerConnectId1}
write [0x03] "tcp"
write ${newServerConnectRef}
write ${newCorrelationId1}
write [0x01] [0x7f 0x00 0x00 0x01]
write [0x1f 0x90]
write [0x01] [0x7f 0x00 0x00 0x01]
write [0x9f 0x90]
write flush

# Stream 2 BEGIN
write [0x00 0x00 0x00 0x01]
write ${newServerConnectId2}
write [0x03] "tcp"
write ${newServerConnectRef}
write ${newCorrelationId2}
write [0x01] [0x7f 0x00 0x00 0x01]
write [0x1f 0x90]
write [0x01] [0x7f 0x00 0x00 0x01]
write [0x9f 0x91]
write flush

read [0x40 0x00 0x00 0x02]
read ${newServerConnectId1}
read [0..4]
read [0..4]

write [0x00 0x00 0x00 0x02]
write ${newServerConnectId1}
write [0x00 0x0d]
write "client data 1"
write flush

read [0x40 0x00 0x00 0x02]
read ${newServerConnectId2}
read [0..4]
read [0..4]

write [0x00 0x00 0x00 0x02]
write ${newServerConnectId2}
write [0x00 0x0d]
write "client data 2"
write flush

close
closed

connect await ROUTED_SERVER
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:oneToOneReader(serverConnectReply.buffer)}
        option agrona:writer ${agrona:oneToOneWriter(serverConnectReply.throttle)}
connected

read [0x00 0x00 0x00 0x01]
read ([0..8]:serverConnectReplyId1)
read [0x06] "target"
read [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
read ${newCorrelationId1}

read [0x00 0x00 0x00 0x01]
read ([0..8]:serverConnectReplyId2)
read [0x06] "target"
read [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
read ${newCorrelationId2}

close
closed
