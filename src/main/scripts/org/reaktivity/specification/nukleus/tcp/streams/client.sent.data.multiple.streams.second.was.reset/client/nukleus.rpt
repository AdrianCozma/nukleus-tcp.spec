property nuklei ${nuklei:directory("target/nukleus-itests").streamsCapacity(1024 * 1024, 64 * 1024)}

property sourceOutput ${nuklei.streams("tcp", "source#partition")}
property sourceInputEst ${nuklei.streams("source", "tcp#any")}

property newSourceInputEstId1 ${nuklei:newStreamId()}
property newSourceInputEstId2 ${nuklei:newStreamId()}

connect await ROUTED_OUTPUT
        agrona://stream/bidirectional
        option reader ${agrona:oneToOneReader(sourceOutput.buffer)}
        option writer ${agrona:oneToOneWriter(sourceOutput.throttle)}
connected

# Stream 1 BEGIN
read [0x00 0x00 0x00 0x01]
read ([0..8]:sourceOutputId1)
read ([0..8]:sourceOutputRef)
read ([0..8]:correlationId1)

write [0x40 0x00 0x00 0x02]
write ${sourceOutputId1}
write [0x00 0x02 0x00 0x00]
write flush

write notify WINDOW_ONE_UPDATED

# Stream 2 BEGIN
read [0x00 0x00 0x00 0x01]
read ([0..8]:sourceOutputId2)
read ([0..8]:sourceOutputRef)
read ([0..8]:correlationId2)

write [0x40 0x00 0x00 0x02]
write ${sourceOutputId2}
write [0x00 0x02 0x00 0x00]
write flush

write notify WINDOW_TWO_UPDATED

read [0x00 0x00 0x00 0x02]
read ${sourceOutputId1}
read [0x00 0x0d]
read "client data 1"

write [0x40 0x00 0x00 0x02]
write ${sourceOutputId1}
write [0x0d 0x00 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x02]
read ${sourceOutputId2}
read [0x00 0x0d]
read "client data 2"

write [0x40 0x00 0x00 0x01]
write ${sourceOutputId2}
write flush

close
closed

connect await ROUTED_INPUT
        agrona://stream/bidirectional
        option reader ${agrona:oneToOneReader(sourceInputEst.throttle)}
        option writer ${agrona:oneToOneWriter(sourceInputEst.buffer)}
connected

write await WINDOW_ONE_UPDATED

write [0x00 0x00 0x00 0x01]
write ${newSourceInputEstId1}
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write ${correlationId1}
write [0x01] [0x7f 0x00 0x00 0x01]
write [0x1f 0x90]
write [0x01] [0x7f 0x00 0x00 0x01]
write [0x9f 0x90]
write flush

write await WINDOW_TWO_UPDATED

write [0x00 0x00 0x00 0x01]
write ${newSourceInputEstId2}
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write ${correlationId2}
write [0x01] [0x7f 0x00 0x00 0x01]
write [0x1f 0x90]
write [0x01] [0x7f 0x00 0x00 0x01]
write [0x9f 0x91]
write flush

close
closed
